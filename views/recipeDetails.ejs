<%- include('partials/head') %> <%- include('partials/header') %>

<div class="d-flex flex-column feed px-3 py-2">
  <div id="recipe-page-content" class="recipe-full-card">
    <img
      src=""
      class="square-media create-image mb-2"
      alt="Recipe Image"
      id="recipe-image" />

    <h3 id="recipe-name" class="mb-0">Loading...</h3>
    <p class="author-chip mb-3" id="recipe-author">by...</p>
    <p id="recipe-timestamp"></p>

    <div id="recipe-save-container" class="recipe-save-container"></div>
  </div>
</div>

<div id="recipe-owner-actions" class="mt-3">
  <button
    id="recipe-delete"
    class="btn btn-outline-forest w-100 d-none">
    Delete recipe
  </button>
</div>

<div id="delete-confirm-overlay" class="modal-overlay" hidden>
  <div class="modal-card">
    <h6 class="mb-2">Delete this recipe?</h6>
    <p class="small mb-3">
      Are you sure you want to delete this recipe? This action cannot be undone.
    </p>
    <div class="d-flex justify-content-end gap-2">
      <button id="delete-cancel-btn" class="btn btn-outline-forest">
        Cancel
      </button>
      <button id="delete-confirm-btn" class="btn btn-forest">
        Delete
      </button>
    </div>
  </div>
</div>

<script type="module" src="/js/recipeDetail.js"></script>
