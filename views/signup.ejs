<%- include('partials/head') %> <%- include('partials/header') %>

<div class="auth-viewport">
  <div class="auth-bubble">
    <h1 class="mb-3 text-dark text-center">Sign Up</h1>

    <div id="auth-error" class="alert alert-danger d-none"></div>

    <form id="signup-form" class="row g-3">
      <div class="col-12">
        <label class="form-label">Display Name</label>
        <input name="displayName" class="form-control" required />
      </div>
      <div class="col-12">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required />
      </div>
      <div class="col-12">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
      </div>
      <div class="col-12 d-flex flex-column align-items-center gap-2 mt-3">
        <button class="btn btn-outline-forest w-100" type="submit">
          Create Account
        </button>
        <a class="btn btn-outline-forest w-100" href="/login">Back to Login</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/scripts') %>
