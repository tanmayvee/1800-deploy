<div id="recipe-preview" class="recipe-preview">
    <!-- Preview panel markup.
         Usage: recipe cards must include class "recipe-button" and a recipeID attribute.
         After cards render, call updateRecipeCards() from /js/preview.js to wire interactions. -->

    <div class="recipe-preview-top">

        <button id="recipe-preview-back" class="recipe-preview-back">
            <i class="bi bi-caret-down-fill"></i>
        </button>

        <span id="recipe-preview-title" class="recipe-preview-title mb-0">PlaceHolder</span>
        
        <button id="recipe-preview-edit" class="recipe-preview-edit" style="display: none;">
            <i class="bi bi-pencil"></i>
        </button>
        
        <button id="recipe-preview-save" class="recipe-preview-save">
            <i id="recipe-preview-save-icon" class="bi bi-heart"></i>
        </button>

    </div>

    <div id="recipe-preview-content" class="recipe-preview-content">
        <img id="recipe-preview-image" src="" alt="" class="recipe-preview-image">

        <span id="recipe-preview-author" class="author-chip mb-3" userID=""></span>
        <span id="recipe-preview-timestamp"></span>

    </div>

</div>
    <script src="/js/preview.js" type="module"></script>
